<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
             android:layout_height="match_parent">
    <Button
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/white"
        android:drawableTop="@drawable/ic_iback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitleTicket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalles de la cita en proceso"
        android:textColor="@color/primary"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/CardSpecial"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="#011627"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleTicket">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvname"
                style="@style/light_ticket_text"
                android:text="Nombre del  especialista encargado:"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivProfesional" />

            <TextView
                android:id="@+id/tvNameSpecialist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_font"
                android:text="Carlos Adolfo Garcia"
                android:textColor="@color/white"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvname" />
            <ImageView
                android:id="@+id/ivProfesional"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/prueba"
                android:text="Horarios"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        app:cardBackgroundColor="#011627"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CardSpecial">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/btnAppointment"
                android:layout_width="200dp"
                android:background="@drawable/prueba"
                android:layout_height="200dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Horarios" />

            <TextView
                android:id="@+id/textView0"
                style="@style/light_ticket_text"
                android:layout_toEndOf="@+id/btnAppointment"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_alignParentTop="true"
                android:text="Lugar donde se realizara la cita:" />

            <TextView
                android:id="@+id/txtDirection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/btnAppointment"
                android:layout_below="@+id/textView0"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/nunito_font"
                android:text="asdfasdfasdfsadf"
                android:textColor="@color/white"
                android:textSize="12dp" />


            <TextView
                android:id="@+id/textView2"
                style="@style/light_ticket_text"
                android:layout_toEndOf="@+id/btnAppointment"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_below="@+id/txtDirection"
                android:text="Nombre del cliente en Espera:" />

            <TextView
                android:id="@+id/txtnameclient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/btnAppointment"
                android:layout_below="@+id/textView2"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/nunito_font"
                android:text="David Alexander Perez"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textView3"
                style="@style/light_ticket_text"
                android:layout_toEndOf="@+id/btnAppointment"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_below="@+id/txtnameclient"
                android:text="Estado de la cita:" />

            <TextView
                android:id="@+id/txtstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/btnAppointment"
                android:layout_below="@+id/textView3"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/nunito_font"
                android:text="En espera o no iniciado"
                android:textColor="@color/white"
                android:textSize="12dp" />


            <TextView
                android:id="@+id/textView5"
                style="@style/light_ticket_text"
                android:layout_below="@+id/btnAppointment"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Inicio de la cita:" />

            <TextView
                android:id="@+id/txtDateService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/nunito_font"
                android:text="@string/title_detail_date_create_service"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textView7"
                style="@style/light_ticket_text"
                android:layout_below="@+id/txtDateService"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Servicio contratado" />

            <TextView
                android:id="@+id/txtdescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView7"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/nunito_font"
                android:text="Capacitacion con Camiones y tanques"
                android:paddingBottom="10dp"
                android:textColor="@color/white"
                android:textSize="12dp" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>