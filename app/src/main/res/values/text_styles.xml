<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="light_text" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="label_style" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/label</item>
        <item name="android:textColor">@color/bg_primary</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="input_style">
        <item name="android:background">@drawable/rounded_input</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="blue_text" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="light_ticket_text" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">#A3D2FB</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="white_text" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
</resources>